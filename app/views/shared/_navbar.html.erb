<div class="navbar-bookie <%= set_bg_color %>">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-bookie-brand" do %>
    <%= image_tag "bookie_logo.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-bookie-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Browse All Books", books_path, class: "navbar-bookie-item navbar-bookie-link" %>
      <%= link_to "Dashboard", dashboard_path, class: "navbar-bookie-item navbar-bookie-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-bookie-item">
        <div class="dropdown">
          <% if current_user %>
            <div class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
              <%= cl_image_tag current_user.photo, width: 150, height: 150, crop: :thumb, gravity: :face, class: "avatar" %>
            </div>
          <ul class="dropdown-menu dropdown-menu-right navbar-bookie-dropdown-menu">
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
          <% end %>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Sign up"), new_user_registration_path, class: "navbar-bookie-item navbar-bookie-link" %>
      <%= link_to t(".log_in", default: "Login"), new_user_session_path, class: "navbar-bookie-item navbar-bookie-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-bookie-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-bookie-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

