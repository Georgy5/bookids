<h1>This is the show page of books</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @book.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag(@book.photo, width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <p><%= @book.author %></p>
      <p><%= @book.description %></p>
      <p>category: <%=  @book.category %></p>
      <p>Price: <%= humanized_money_with_symbol(@book.price) %></p>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= form_tag book_personalizations_path(@book)do %>
        <%= hidden_field_tag 'book_id', @book.id %>
        <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>


  <div style="margin-top:50px;margin-bottom:10px">
    <div class="line"></div>
  </div>
  <div>
    <% @personalizations.each do |personalization| %>
      <% personalization.reviews.each do |review| %>
        <div class="reviews">
          <div class="reviews-left">
            <div class="review-stars">
              <%= select_tag "stars", options_for_select((0..5).to_a, review.stars), class: "review-stars-select" %>
            </div>
            <div class="review-user">
              <%= personalization.user.first_name %>
            </div>
          </div>
          <div class="review-right">
            <div class="review-header">
              <%= review.header %>
            </div>
            <div class="review-description">
              <%= review.description %>
            </div>
          </div>
        </div>
      <div style="margin-top:50px;margin-bottom:10px">
        <div class="line"></div>
      </div>
      <% end %>
    <% end %>
  </div>

</div>
