
<div class="banner home-color" ">
  <div class="banner-content">
    <h1><%= image_tag "bookie_logo.svg", height: 50 %> BOOKIDS</h1>
    <%= image_tag "linea_redonda.png" %>
    <p>Amazing personalized stories
    for amazing children</p>
    <div class ="search-button">
      <%= form_tag books_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "search-form form-control",
        placeholder: "Enter Book Genre"
        %>
        <% end %>
      </div>
    </div>
  </div>

<div class="intro" >
  <div class="row">
    <div class="col-xs-12 home-description">
      <h1>Welcome to Bookids</h1>
      <p>The funniest way to educate and share stunning personalized stories with your kids.</p>
    </div>
  </div>
  <div class="row">
    <div class=" steps">
      <div class="step_by_step">
        <%= image_tag "icon1.png", class:"intro-icons" %>
        <h1>Search for inspiration</h1>
        <p >Select what kind of story you want to share with your kids.</p>
      </div>
      <div class="step_by_step">
        <%= image_tag "icon2.png", class:"intro-icons" %>
        <h1>Personalize your story</h1>
        <p>Make the story personal and add some personal details to make it stunning!</p>
      </div>
      <div class="step_by_step last"  >
        <%= image_tag "icon3.png", class:"intro-icons"  %>
        <h1>Print it or download it</h1>
        <p>Print an awesome book or download it straight to your phone, ipad or laptop.</p>
      </div>
    </div>
    <div class ="cloud">
      <%= image_tag "cloud.png" %>
    </div>
  </div>
   </div>
     <%= image_tag "banner_bottom_2.png", class:"banner_bottom" %>
    <div>
</div>

<div class="landing-bottom">
 <div class="row">
    <div class="col-xs-12 home-description">
        <h1>Search by categories</h1>
        </div>
        <div class = "carrousel_filter">
          <%= link_to "sleep", filtered_books_path(category: "sleep"), class: "btn-carrousel", remote: true %>
          <%= link_to "sports", filtered_books_path(category: "sports"), class: "btn-carrousel", remote: true %>
          <%= link_to "friends", filtered_books_path(category: "friends"), class: "btn-carrousel", remote: true %>
          <%= link_to "food", filtered_books_path(category: "food"), class: "btn-carrousel", remote: true %>
        </div>
        <p>.</p>
      <div id="main-carrousel">
        <%= render 'shared/carrousel', books: @books %>
      </div>
    </div>
</div>

<%= javascript_pack_tag 'carrousel' %>

