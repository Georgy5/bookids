
<h1>Your book was not found</h1>
<div class="container">
  <div class="row">
    <% if @books.count == 0 %>
    Feel free to browse our current <a href="/books">library</a> or try again.
    <!-- MESSAGE NOT FOUND... LINK TO SHOW ALL BOOKS -->
    <% else %>
      <% @books.each do |book| %>
        <div class="col-sm-6 col-md-3 ">
          <div class="thumbnail">
            <div class="photo-index">
            <%= link_to image_tag(book.photo), book_path(book) %>
            </div>
            <div class="caption">
              <h3><%= link_to book.name, book_path(book) %></h3>
              <p> Category: <%= book.category %></p>
              <p><%= humanized_money_with_symbol(book.price) %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

