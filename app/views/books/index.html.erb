
<div class="wrapper">
  <div class="row row-index">
    <% if @books.count == 0 %>
    <div class="not">
      <h1>Sorry, your book was not found</h1>
      <p>Feel free to browse our current <a href="/books">library</a> or try again.</p>
    </div>
    <!-- MESSAGE NOT FOUND... LINK TO SHOW ALL BOOKS -->
    <% else %>
      <div class="header">
        <h2> <%= current_user.first_name%>, you are only one click away from customizing your child's book #<%= current_user.personalizations.count + 1 %>. Pick one of the following stories and help your child develop through stories. </h2>
        <h2>Thank you for sharing our passion. <i class="em em-smiley"></i></h2>
      </div>
      <% @books.each do |book| %>
      <div class="col-sm-6 col-md-3 single-card">
        <%= link_to book_path(book) do %>
        <div class="thumbnail">
          <p class="name"> <%= book.name %></p>
          <div class="photo-index" style="background-image:url(<%= image_path(book.photo)%>)">
          </div>
          <div class="caption">
            <div class="text">
              <div class="age-stars-price-index">
                <p><i class="fas fa-child"></i>  <%=book.age %></p>
                <p>Stars<%= %></p>
                <p><%= humanized_money_with_symbol(book.price) %></p>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
    <% end %>
  </div>
</div>

