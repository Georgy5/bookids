<h1>Purchase of books <%= @personalization.book_sku %></h1>
<%= form_tag order_payments_path(@personalization) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@personalization.amount) %></span>
    </label>
  </article>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Book"
    data-email="<%= current_user.email %>"
    data-description="Book <%= @personalization.book_sku %>"
    data-amount="<%= @personalization.amount_cents %>"></script>
<% end %>
